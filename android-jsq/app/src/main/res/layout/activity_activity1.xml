<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/black"
    android:configChanges = "orientation|keyboardHidden|screenSize"
    android:screenOrientation="landscape"
    tools:context=".activity1">

    <TableLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <TableRow
            android:layout_width="match_parent"
            android:layout_height="match_parent">

            <EditText
                android:id="@+id/number"
                android:layout_width="318dp"
                android:layout_height="137dp"
                android:layout_span="4"
                android:clickable="false"
                android:cursorVisible="false"
                android:ems="10"
                android:focusable="false"
                android:focusableInTouchMode="false"
                android:inputType="textPersonName"
                android:lineSpacingExtra="14sp"
                android:text="@string/zero"
                android:textColor="#FDFDFE"
                android:textSize="100sp" />
        </TableRow>

        <TableRow
            android:layout_width="match_parent"
            android:layout_height="match_parent" >

            <EditText
                android:id="@+id/editText2"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_span="4"
                android:ems="10"
                android:inputType="textPersonName"
                android:textColor="#FDFDFE"
                android:text="" />
        </TableRow>

        <TableRow
            android:layout_width="match_parent"
            android:layout_height="match_parent">

            <Button
                android:id="@+id/button2"
                android:layout_width="120dp"
                android:layout_height="120dp"
                android:text="@string/er"
                android:background="@drawable/btn_circle3"
                android:textSize="24sp" />

            <Button
                android:id="@+id/button8"
                android:layout_width="120dp"
                android:background="@drawable/btn_circle3"
                android:layout_height="120dp"
                android:text="@string/ba"
                android:textSize="24sp" />

            <Button
                android:id="@+id/button16"
                android:layout_width="120dp"
                android:layout_height="120dp"
                android:background="@drawable/btn_circle3"
                android:text="@string/shiliu"
                android:textSize="24sp" />
        </TableRow>

        <TableRow
                android:layout_width="match_parent"
                android:layout_height="match_parent" >

            <Button
                android:id="@+id/button_sin"
                android:layout_width="120dp"
                android:layout_height="120dp"
                android:text="@string/sin"
                android:background="@drawable/btn_circle2"
                android:textColor="#FDFDFE"
                android:textSize="24sp" />

            <Button
                android:id="@+id/button_cos"
                android:layout_width="120dp"
                android:layout_height="120dp"
                android:text="@string/cos"
                android:background="@drawable/btn_circle2"
                android:textColor="#FDFDFE"
                android:textSize="24sp" />

            <Button
                android:id="@+id/button_tan"
                android:layout_width="120dp"
                android:layout_height="120dp"
                android:background="@drawable/btn_circle2"
                android:textColor="#FDFDFE"
                android:text="@string/tan"
                android:textSize="24sp" />
        </TableRow>

        <TableRow
            android:layout_width="match_parent"
            android:layout_height="match_parent" >

            <Button
                android:id="@+id/button_return"
                android:layout_width="120dp"
                android:layout_height="120dp"
                android:layout_span="2"
                android:text="@string/return0"
                android:background="@drawable/btn_circle"

                android:textSize="24sp" />
            <Button
                android:id="@+id/button_zhuanhuan"
                android:layout_width="120dp"
                android:layout_height="120dp"
                android:layout_span="2"
                android:text="@string/zhuan"
                android:background="@drawable/btn_circle4"

                android:textSize="24sp" />
        </TableRow>
    </TableLayout>
</androidx.constraintlayout.widget.ConstraintLayout>